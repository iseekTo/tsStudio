{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "es6"
    ],
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".lib/.ts",
    "lib/**/*",    
    "./index.d.ts",
  ],
  "typeRoots": [
    "./index.d.ts",
    "./node_modules/@types"
  ],
}